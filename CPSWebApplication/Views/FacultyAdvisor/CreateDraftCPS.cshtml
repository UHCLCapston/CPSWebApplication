@model CPSWebApplication.Models.ViewModel.DesignCPSViewModel

@{
    ViewBag.Title = "CreateDraftCPS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateDraftCPS</h2>
<p> @Session["UserName"].ToString() Let's Start Creating Draft CPS</p>


@if (TempData["Message"] != null)
{<div style="color: #1e83ca;">@TempData["Message"]</div>}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.searchId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.searchId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.searchId, "", new { @class = "text-danger" })
            <br />
            <button type="submit" class="btn btn-default" onclick="window.location = ('@Url.Action("StudentCPSDesign","DesignCPSController")')">Submit </button>
            <br />
        </div>
    </div>
    <div>@for (int i = 0; i < Model.cpsList.Count(); i++)
                {

        <div>@Model.cpsList[i].FirstName </div>
        <div>@Model.cpsList[i].StudentID </div>



    }</div>
}
<button type="button" class="btn btn-default" onclick="window.location = ('@Url.Action("AcademicAdvisor", "Home", new { id = Convert.ToInt32(@Session["UserID"]) })')">BACK TO HOME </button>

