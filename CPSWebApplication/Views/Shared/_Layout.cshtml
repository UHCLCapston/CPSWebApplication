<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CPS Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CANDIDATE PLAN OF STUDY", "Welcome", "HOME", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav pull-right">
                        @if (Session["UserName"] != null)
                        {

                            <li>
                                <a>@Html.Label("Hello " + Session["UserName"].ToString() + " !")</a>
                            </li>
                            <!--switch (Session["Role"])
                {
                    case "AcademicAdvisor":
                        <li>@Html.ActionLink("Home", "AcademicAdvisor", "Home")</li>
                        break;
                    case "FacultyAdvisor":
                        <li>@Html.ActionLink("Home", "Faculty", "Home")</li>
                        break;
                    case "Student":
                        <li>@Html.ActionLink("Home", "Student", "Home")</li>
                        break;
                    case "Secretary":
                        <li>@Html.ActionLink("Home", "Secretary", "Home")</li>
                        break;

                }-->
                            <li>@Html.ActionLink("Log Out", "LogOut", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Log In", "LogIn", "Account")</li>
                        }

                    </ul>
                </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Techie Hawks</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
