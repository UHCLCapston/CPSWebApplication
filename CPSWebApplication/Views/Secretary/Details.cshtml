@model CPSWebApplication.Models.ViewModel.DesignCPSViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CPS</h2>
<p class="text-hide">@Session["UserName"].ToString() Want to see Draft CPS</p>
@using (Html.BeginForm("", ""))
{
    <div class="row">
        <div class="col-xs-10">
            <table id="cphMainContent_dgvUsers" class="table table-hover table-striped"
           cellspacing="0" style="border-collapse:collapse;">
                    <tbody>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.academicYear, new { @class = "control-label col-md-2" })
                            </td>
                            <td>
                                
                                    @Html.TextBoxFor(model => model.academicYear, new { @class = "form-control", @readonly = "readonly" })
                               
                            </td>
                            <td>
                                @Html.LabelFor(model => model.majorName, new { @class = "control-label col-md-2" })
                            </td>
                            <td>
                                
                                    @Html.TextBoxFor(model => model.majorName, new { @class = "form-control", @readonly = "readonly" })
                               
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.lastName, new { @class = "control-label col-md-2" })
                            </td>
                            <td>
                                
                                    @Html.TextBoxFor(model => model.lastName, new { @class = "form-control", @readonly = "readonly" })
                                
                            </td>
                            <td>
                                @Html.LabelFor(model => model.firstName, new { @class = "control-label col-md-2" })
                            </td>
                            <td>
                                
                                    @Html.TextBoxFor(model => model.firstName, new { @class = "form-control", @readonly = "readonly" })
                                
                            </td>
                            <td>
                                @Html.LabelFor(model => model.searchId, new { @class = "control-label col-md-2" })
                            </td>
                            <td>
                                
                                    @Html.TextBoxFor(model => model.searchId, new { @class = "form-control", @readonly = "readonly" })
                               
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="form-group" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
            

            <div class="row">
                <div class="col-xs-10">
                    <table id="cphMainContent_dgvUsers" class="table table-hover table-striped"
           cellspacing="0" style="border-collapse:collapse;">

                        <tbody>
                            <tr><th class="h4">Foundation Courses:</th></tr>
                            <tr>
                                <th scope="col">Course</th>
                                <th scope="col">Long Title</th>
                                <th scope="col">Credits</th>
                                <th scope="col">EnrolledSemester</th>
                                <th scope="col">Grade</th>
                            </tr>
                            @if (Model.FoundationClassesList != null)
                            {
                                for (int i = 0; i < Model.FoundationClassesList.Count(); i++)
                                {

                                    <tr class="cursor-pointer">
                                        <td>@Model.FoundationClassesList[i].CourseShortName</td>
                                        <td>@Model.FoundationClassesList[i].CourseFullName</td>
                                        <td>@Model.FoundationClassesList[i].CreditHrs</td>
                                        <td>@Model.FoundationClassesList[i].EnrolledSemester</td>
                                        <td>@Model.FoundationClassesList[i].GradesRecieved</td>
                                    </tr>

                                }
                            }
                            <tr><th class="h4">Core Courses:</th></tr>
                            @for (int i = 0; i < Model.CoreClassesList.Count(); i++)
                            {
                                <tr class="cursor-pointer">
                                    <td>@Model.CoreClassesList[i].CourseShortName </td>
                                    <td>@Model.CoreClassesList[i].CourseFullName</td>
                                    <td>@Model.CoreClassesList[i].CreditHrs</td>
                                    <td>@Model.CoreClassesList[i].EnrolledSemester</td>
                                    <td>@Model.CoreClassesList[i].GradesRecieved</td>

                                </tr>
                            }

                            <tr>

                               <!-- <td>   @Html.LabelFor(model => model.programCompletionOption, new { @class = "control-label col-md-2" })</td> -->
                                <td>Program Completion Option</td>
                                <td>@Html.TextBoxFor(model => model.programCompletionOption, new { @class = "form-control", @readonly = "readonly" })</td>

                            </tr>

                            @if (Model.ElectiveClassesList != null)
                            {
                                <tr><th class="h4">Elective Courses:</th></tr>
                                for (int i = 0; i < Model.ElectiveClassesList.Count(); i++)
                                {
                                    <tr class="cursor-pointer">
                                        <td>@Model.ElectiveClassesList[i].CourseShortName </td>
                                        <td>@Model.ElectiveClassesList[i].CourseFullName</td>

                                        <!-- <td>@Model.ElectiveClassesList[i].CourseSubjectWithRubric</td>-->
                                        <td>@Model.ElectiveClassesList[i].CreditHrs</td>
                                        <td>@Model.ElectiveClassesList[i].EnrolledSemester</td>
                                        <td>@Model.ElectiveClassesList[i].GradesRecieved</td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
                                <div>
                                    @Html.LabelFor(model => model.assignedFaculty, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.assignedFaculty, new { @class = "form-control", @readonly = "readonly" })
                                        <br />
                                    </div>
                                </div>

                              
                                <div class="hidden-print">
                                    <button type="button" class="btn btn-default" onclick="window.location = ('@Url.Action("StudentList", "Secretary", new { id = Convert.ToInt32(@Session["UserID"]) })')">BACK TO HOME </button>
                                   
                                    <a href="javascript:window.print()" class="btn btn-success ">
                                        <span class="glyphicon glyphicon-print"></span> Print
                                    </a>
                                </div>
                                <!-- <@Html.ActionLink("Back to List", "StudentList")>-->
}



